{
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "module": "ES2020",
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": "./",
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests/**/*",
    "**/dist",
    "**/tests",
    "**/es",
    "**/cjs",
    "__snapshots__",
    "*.test.ts",
    "*.test.tsx"
  ]
}
